@using EuroPallets.ViewModels
@model LoginViewModel

<link href="~/assets/css/pages/log-reg.css" rel="stylesheet" />

<div class="log-reg-v3 content-md">
    <div class="container">
        <div class="row">
            <div class="col-md-7 md-margin-bottom-50">
                <h2 class="welcome-title">Добре дошли в Mebellete</h2>
                <p>Сайта предлага огромно количество от мебели, които са изработени изцяло от дървен материал, както са използвани и евро-палети.</p><br>
                <div class="info-block-v2">
                    <i class="icon icon-layers"></i>
                    <div class="info-block-in">
                        <h3>Голям асортимент от мебели</h3>
                        <p>Разгледайте нашия каталог от мебели.Предлагаме над 200 различни вида мебели и обзавеждане за вашия дом и градина.</p>
                    </div>
                </div>
                <div class="info-block-v2">
                    <i class="icon icon-settings"></i>
                    <div class="info-block-in">
                        <h3>Денонощно облужване</h3>
                        <p>Нашите оператори са на линия 24/7 , за да може да ви предложим качествено облужване !</p>
                    </div>
                </div>
                <div class="info-block-v2">
                    <i class="icon icon-paper-plane"></i>
                    <div class="info-block-in">
                        <h3>Направете нещата по вашия начин</h3>
                        <p>С новата ни опция може да направите вашия желан дом по свой вкус.Ако някой от вашите мечти ги няма в нашия каталог с удоволствие може да го изработим единствено за вас !</p>
                    </div>
                </div>
            </div>

            <div class="col-md-5">
                @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "log-reg-block sky-form", role = "form", data_toggle = "validator" }))
                {
                    @Html.AntiForgeryToken()
                    <h2>Влезте в акаунта си</h2>

                    <section>
                        <label class="input login-input">
                            <div class="input-group">
                                <span class="input-group-addon"><i class="fa fa-user"></i></span>
                                @Html.TextBoxFor(m => m.Email, new { name = "email", @class = "form-control", placeholder = "Email", required = "required", pattern = @"[^@]+@[^@]+\.[a-zA-Z]{2,6}", oninvalid = "this.setCustomValidity('Въведете правилен email !')" })
                            </div>
                        </label>
                    </section>
                    <section>
                        <label class="input login-input no-border-top">
                            <div class="input-group">
                                <span class="input-group-addon"><i class="fa fa-lock"></i></span>
                                @Html.PasswordFor(m => m.Password, new { name = "password", @class = "form-control", placeholder = "Password", required = "required", oninvalid = "this.setCustomValidity('Въведете парола !')" })
                            </div>
                        </label>
                    </section>
                    <div class="row margin-bottom-5">
                        <div class="col-xs-6">
                            @*Check box did`t work when class checkbox is call on div!*@
                            @*<div class="checkbox">*@
                            @Html.CheckBoxFor(m => m.RememberMe)
                            <i></i>
                            Запомни ме
                            @*</div>*@
                        </div>
                        <div class="col-xs-6 text-right">
                            @Html.ActionLink("Забравена парола?", "ForgotPassword")
                        </div>
                    </div>
                    <button class="btn-u btn-u-sea-shop btn-block margin-bottom-20" type="submit">ОК</button>


                }

                <div class="border-wings">
                    <span>или</span>
                </div>
                <div class="log-reg-block sky-form">
                    <div class="row columns-space-removes">
                        <div class="col-lg-6 margin-bottom-10">
                            @Html.Partial("_ExternalLoginsListPartial", new ExternalLoginListViewModel { ReturnUrl = ViewBag.ReturnUrl })
                        </div>
                        @*<div class="col-lg-6">
                                <button type="button" class="btn-u btn-u-md btn-u-tw btn-block"><i class="fa fa-twitter"></i> Twitter акаунт</button>
                            </div>*@
                    </div>
                </div>
                <div class="margin-bottom-20"></div>
                <p class="text-center">
                    Все още нямаш акаунт? Научи повече на
                    @Html.ActionLink("Регистрация", "Register")
                    @*<a href="shop-ui-register.html">Sign Up</a>*@
                </p>
            </div>
        </div><!--/end row-->
    </div><!--/end container-->
</div>
