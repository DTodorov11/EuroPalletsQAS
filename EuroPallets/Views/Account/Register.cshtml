@model EuroPallets.ViewModels.RegisterViewModel

<link href="~/assets/css/pages/log-reg.css" rel="stylesheet" />


<div class="log-reg-v3 content-md margin-bottom-30">
    <div class="container">
        <div class="row">
            <div class="col-md-7 md-margin-bottom-50">
                <h2 class="welcome-title">Добре дошли в Mebellete</h2>
                <p>Регистрирай се сега и виж голямо разнообразие от мебели за вашия дом и градина.Направи интериора така както винаги си искал.</p><br>
                <div class="row margin-bottom-50">
                    <div class="col-sm-4 md-margin-bottom-20">
                        <div class="site-statistics">
                            <span>1,109</span>
                            <small>Продукта</small>
                        </div>
                    </div>
                    <div class="col-sm-4 md-margin-bottom-20">
                        <div class="site-statistics">
                            <span>54,283</span>
                            <small>Преглеждания</small>
                        </div>
                    </div>
                    <div class="col-sm-4">
                        <div class="site-statistics">
                            <span>+10 000</span>
                            <small>Продажби</small>
                        </div>
                    </div>
                </div>
                <div class="members-number">
                    <h3>Присъедини се към <span class="shop-green">257</span> градове за доставка</h3>
                    <img class="img-responsive" src="~/assets/img/map.png" alt="доставка в цяла България">
                </div>
            </div>

            <div class="col-md-5">
                @using (Html.BeginForm("Register", "Account", FormMethod.Post, new {@class = "log -reg-block sky-form", role = "form", data_toggle = "validator" }))
                {
                    @Html.AntiForgeryToken()
                    <h2>Създаване на нов акаунт</h2>

                    <div class="login-input reg-input">
                        <div class="row">
                            <div class="col-sm-6">
                                <section>
                                    <label class="input">
                                        @Html.TextBoxFor(m => m.FirstName, new { @class = "form-control", placeholder = "Първо име", required = "required", pattern = ".{3,}" })
                                    </label>
                                </section>
                            </div>
                            <div class="col-sm-6">
                                <section>
                                    <label class="input">
                                        @Html.TextBoxFor(m => m.LastName, new { @class = "form-control", placeholder = "Фамилно име", required = "required", pattern = ".{3,}" })
                                    </label>
                                </section>
                            </div>
                        </div>
                        <label class="select margin-bottom-15">
                            @Html.EnumDropDownListFor(x => x.Gender, new { @class = "form-control" })
                        </label>
                        <div class="row margin-bottom-10">
                            <div class="col-xs-6">
                                <label class="select">
                                    <select name="month" class="form-control">
                                        <option disabled="" selected="" value="0">Месец</option>
                                        <option>January</option>
                                        <option>February</option>
                                        <option>March</option>
                                        <option>April</option>
                                        <option>May</option>
                                        <option>June</option>
                                        <option>July</option>
                                        <option>August</option>
                                        <option>September</option>
                                        <option>October</option>
                                        <option>November</option>
                                        <option>December</option>
                                    </select>
                                </label>
                            </div>
                            <div class="col-xs-3">
                                <input type="text" name="day" placeholder="Day" class="form-control" required >
                            </div>
                            <div class="col-xs-3">
                                <input type="text" name="year" placeholder="Year" class="form-control" required>
                            </div>
                        </div>
                        <section>
                            <label class="input">
                                @Html.TextBoxFor(x => x.Email, new { @class = "form-control", placeholder = "Имейл", required= "required" })
                            </label>
                        </section>
                        <section>
                            <label class="input">
                                @Html.PasswordFor(m => m.Password, new { @class = "form-control",id= "inputPassword", placeholder = "Парола", required = "required",pattern= ".{3,}", oninvalid = "this.setCustomValidity('Минимум 6 символа!')" })
                            </label>
                        </section>
                        <section>
                            <label class="input">
                                @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control", placeholder = "Потвърдете парола", required = "required", data_match = "#inputPassword", data_match_error = "Паролата не съвпада" })
                            </label>
                        </section>
                        <section>
                            <label class="input">
                                @Html.TextBoxFor(m => m.PhoneNumber, new { @class = "form-control", placeholder = "Tелефонен номер", required = "required" })
                            </label>
                        </section>
                    </div>

                    <label class="checkbox margin-bottom-10">
                        @Html.CheckBoxFor(x => x.Subscribe)
                        <i></i>
                        Абонирай се за нови продукти както и за новия каталог
                    </label>
                    <label class="checkbox margin-bottom-20">
                        <input type="checkbox" name="checkbox">
                        <i></i>
                        Вече съм запознат с <a href="#">условията за ползване</a>
                    </label>
                    <button class="btn-u btn-u-sea-shop btn-block margin-bottom-20" type="submit">Създаване на акаунт</button>
                    @*</form>*@
                }
                <div class="margin-bottom-20"></div>
                <p class="text-center">
                    Вече имаш акаунт?
                    @Html.ActionLink("Влизане", "Login")
                </p>
            </div>
        </div><!--/end row-->
    </div><!--/end container-->
</div>

<script>

</script>

